<%= simple_form_for @user do |f| %>

  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :password %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn btn-primary", :value => "Sign Up!" %>
  </div>
<% end %>