<%= simple_form_for diva, :html => { :class => "form-inline" } do |f| %>

  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description, :as => :text, :input_html => { :rows => 5 } %>
  </div>

  <div class="form-actions">

    <% if diva.id? %>

      <%= f.button :submit, :url => diva_path(diva), :class => "btn #{class_name}", :value => btn_text %>

    <% else %>

      <%= f.button :submit, :url => divas_path, :class => "btn #{class_name}", :value => btn_text %>

    <% end %>

  </div>
<% end %>